# Studio AI Environment Variables
# Copy this file to .env and fill in your actual API keys

# Hugging Face API Token
# Get yours from: https://huggingface.co/settings/tokens
HUGGING_FACE_API_TOKEN=your_hugging_face_token_here

# Google Cloud Credentials
# Set up Google Cloud Translation API and place your credentials JSON file path here
# Or use Application Default Credentials (ADC)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json

# Optional: Set debug mode
DEBUG=False

# Optional: Set server host and port
HOST=0.0.0.0
PORT=8000